{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>ImageURL</th>
                <td><img src="{{ product.imageURL }}" style="height: 200px; width: 250px"></td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ product.createAt ? product.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <td colspan="2"> THIS PRODUCT WAS ORDERED :</td>
            </tr>
            <tr>
                <th>id order</th>
                <th>quantity ordered</th>
            </tr>
            {% for orderD in product.orderDetail %}
                <tr>
                    <td>
                        {{ orderD.order.id }}
                    </td>
                    <td>
                        {{ orderD.quantity }}
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3">no records found</td></tr>
            {% endfor %}
            </tbody>
    </table>

    <a href="{{ path('product_index') }}">
        <button type="button" class="btn btn-success">back</button>
    </a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">
        <button type="button" class="btn btn-danger">edit</button>
    </a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
