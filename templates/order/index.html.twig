{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreateAt</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.createAt ? order.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <table>
                            <tr>
                                <td>product</td>
                                <td>quantity</td>
                            </tr>
                            {% for orderD in order.orderDetail %}
                            <tr>
                                <td>
                                    {{ orderD.product }}
                                </td>
                                <td>
                                    {{ orderD.quantity }}
                                </td>
                            </tr>
                            {% else %}
                                <tr><td colspan="3">no records found</td></tr>
                            {% endfor %}


                    </table>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
